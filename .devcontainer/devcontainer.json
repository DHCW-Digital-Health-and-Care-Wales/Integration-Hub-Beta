{
  "name": "Integration Hub Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3",
  "remoteEnv": {
    // the original host directory which is needed for volume 
    // mount commands from inside the container (Docker in Docker)
    "HOST_WORKSPACE_PATH": "${localWorkspaceFolder}"
  },
  // Forward 'server' ports to allow sending of HL7 messages from the local machine
  "forwardPorts": [2575, 2577, 2579, 2580],
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {
      "moby": false
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
